!!!
%html
  %head
    %title PassiveDNS :: SimpleUI
    %link{:href=>"stylesheet.css",:type=>"text/css",:rel=>"stylesheet"}
  %body
    %div#container
      %h1 PassiveDNS...still very raw...
      %div.menu
        %ul
          %li
            %a{:href=>"/"} List
          %li
            %a{:href=>"/summary"} Summary
          %li
            %a{:href=>"/advanced_search"} Advanced Search
          %li
            %a{:href=>"#"} &nbsp;
          %li
            %a{:href=>"/about"} About
      %div.searchbar
        %form{:action=>"/search", :method=>"post"}
          %input{:type=>"text", :size=>"8", :name=>"search", :value=>"search"}
          &nbsp;
          %input{:type=>"image", :src=>"images/searchButton.jpg", :name=>"submit", :value=>"search"}
        %p
          Available DNS records: #{@@total}
      =yield
