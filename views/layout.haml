!!!
%html
  %head
    %title PassiveDNS :: SimpleUI
    %link{:href=>"/stylesheet.css",:type=>"text/css",:rel=>"stylesheet"}
    %script{:src=>"/js/jquery-1.7.min.js",:type=>"text/javascript"}
    %script{:src=>"/js/jquery.dimensions.js",:type=>"text/javascript"}
    %script{:src=>"/js/jquery.tooltip.min.js",:type=>"text/javascript"}
    %script
      $("#demo img[title]").tooltip();
  %body
    #container
      %h1 PassiveDNS...still very raw...
      .menu
        %ul
          %li
            %a{:href=>"/"} List
          %li
            %a{:href=>"/summary"} Summary
          %li
            %a{:href=>"/advanced_search"} Advanced Search
          %li
            %a{:href=>"#"} &nbsp;
          %li
            %a{:href=>"/about"} About
      .searchbar
        %p
          Total Records: #{@@total}
        %form{:action=>"/search", :method=>"post"}
          %span.simpletip{:title=>"Full-text Search of Query and Responses"} &nbsp;
          %input{:type=>"text", :size=>"8", :name=>"search", :value=>"search", :onfocus=>"value=''"}
          &nbsp;
          %input{:type=>"image", :src=>"/images/zoom.png", :name=>"submit", :value=>"search"}
      =yield
