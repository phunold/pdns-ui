%h2 Search Result
- unless @records.empty?
  .alert.alert-info
    #{@meta} &#39;#{@lookup}&#39;
    %span.badge.badge-info= @records.pagination_record_count
- else
  .alert.alert-warning
    Oops, nothing found :(
- unless @records.empty?
  %p= will_paginate(@records)
  %table.table.table-condensed.table-striped.table-bordered
    %thead
      %tr
        %td Query
        %td CLASS
        %td Query Type
        %td Answer
        %td TTL
        %td
          First Seen
          %span.help{:title=>"showing \"-\" if First Seen and Last seen are the same!"} &nbsp;
        %td Last Seen
    %tbody
      - for r in @records
        %tr
          %td
            - if r.QUERY.empty?
              &lt;blank&gt;
            - else
              %a{:href=>"/q/#{r[:QUERY]}"}= r[:QUERY]
          %td= r[:RR]
          %td= r[:MAPTYPE]
          %td
            %a{:href=>"/a/#{r[:ANSWER]}"}= r[:ANSWER]
          %td= r[:TTL]
          - if r[:FIRST_SEEN] == r[:LAST_SEEN]
            %td -
          - else
            %td.timestamp= r[:FIRST_SEEN].strftime(settings.long_date_format)
          %td.timestamp= r[:LAST_SEEN].strftime(settings.long_date_format)
  %p= will_paginate @records
