%h2
  Search Results for
  = @lookup
%p
  Matched Records: #{@records.pagination_record_count}
  = will_paginate(@records)
%table#main
  %thead
    %tr
      %td{:id=>"cornerLeft", :width=>"20"} &nbsp;
      %td
        First Seen
        %span.help{:title=>"\"-\" if a brand new query!"} &nbsp;
      %td Last Seen
      %td Query
      %td Query Type
      %td CLASS
      %td Answer
      %td TTL
      %td{:id=>"cornerRight", :width=>"20"} &nbsp;
  %tbody
    - for r in @records
      %tr{:class=>cycle}
        %td &nbsp;
        - if r[:FIRST_SEEN] == r[:LAST_SEEN]
          %td -
        - else
          %td= r[:FIRST_SEEN].strftime("%b %d, %T")
        %td= r[:LAST_SEEN].strftime("%b %d, %T")
        %td
          %a{:href=>"/q/#{r[:QUERY]}"}= r[:QUERY]
        %td= r[:MAPTYPE]
        %td= r[:RR]
        %td
          %a{:href=>"/a/#{r[:ANSWER]}"}= r[:ANSWER]
        %td= r[:TTL]
        %td &nbsp;
%p
  = will_paginate(@records)
