%h2
  DNS QUERY
  %span.simpletip{:title=>"100 latest records brief"}
%table
  %thead
    %tr
      %td{:id=>"cornerLeft",:width=>20} &nbsp;
      %td First Seen
      %td
        Last Seen
        %span.simpletip{:title=>"\"-\" only seen once!"} &nbsp;
      %td Query
      %td Q Type
      %td Answer
      %td{:id=>"cornerRight",:width=>20} &nbsp;
  - @records.each do |r|
    %tbody
      %tr{:class=>cycle}
        %td &nbsp;
        %td= r[:FIRST_SEEN].strftime("%b %d, %T")
        - if r[:FIRST_SEEN] == r[:LAST_SEEN]
          %td -
        - else
          %td= r[:LAST_SEEN].strftime("%b %d, %T")
        %td
          %a{:href=>"/q/#{r[:QUERY]}"}= r[:QUERY]
        %td= r[:MAPTYPE]
        %td
          %a{:href=>"/a/#{r[:ANSWER]}"}= r[:ANSWER]
        %td &nbsp;
