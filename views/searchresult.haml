%p
  Results in database: #{@results_total}
  - if @results_total > 100
    (limited display to first 100)
%table
  %thead
    %tr
      %td{:id=>"cornerLeft", :width=>"20"} &nbsp;
      %td First Seen
      %td Last Seen
      %td Query
      %td Maptype
      %td RR
      %td Answer
      %td TTL
      %td{:id=>"cornerRight", :width=>"20"} &nbsp;
  %tbody
    - for r in @results
      %tr{:class=>cycle}
        %td &nbsp;
        %td= r[:FIRST_SEEN].strftime("%b %d, %T")
        %td= r[:LAST_SEEN].strftime("%b %d, %T")
        %td
          %a{:href=>"/q/#{r[:QUERY]}"}= r[:QUERY]
        %td= r[:MAPTYPE]
        %td= r[:RR]
        %td
          %a{:href=>"/a/#{r[:ANSWER]}"}= r[:ANSWER]
        %td= r[:TTL]
        %td &nbsp;
