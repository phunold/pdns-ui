%h2
  Summary
%h3
  Database
%ul
  %li
    First Record available: #{@oldest_date}
  %li
    Latest Record available: #{@latest_date}
%hr
%h3
  Top10 DNS Query
  %span.help{:title=>"passivedns is caching, use Top10 list with caution!"} &nbsp;
%table
  %thead
    %tr
      %td{:id=>"cornerLeft",:width=>20} &nbsp;
      %td Address
      %td Total Queries
      %td{:id=>"cornerRight",:width=>20} &nbsp;
  - for i in @top_query
    %tbody
      %tr
        %td &nbsp;
        %td
          %a{:href=>"/q/#{i[:QUERY]}"}= i[:QUERY]
        %td= i[:count]
        %td &nbsp;
%hr
%h3
  Query Type
  %span.help{:title=>"Overall distribution of Query Types"} &nbsp;
%table
  %thead
    %tr
      %td{:id=>"cornerLeft",:width=>20} &nbsp;
      %td Query Type
      %td Total
      %td{:id=>"cornerRight",:width=>20} &nbsp;
  - for m in @maptypes
    %tbody
      %tr
        %td &nbsp;
        %td= m[:MAPTYPE]
        %td= m[:count]
        %td &nbsp;
%hr
%h3
  NXDOMAIN
  %span.help{:title=>"Query returning NXDOMAIN"} &nbsp;
%table
  %thead
    %tr
      %td{:id=>"cornerLeft",:width=>20} &nbsp;
      %td Query
      %td Count
      %td{:id=>"cornerRight",:width=>20} &nbsp;
  - for i in @nxdomains
    %tbody
      %tr
        %td &nbsp;
        %td
          %a{:href=>"/q/#{i[:QUERY]}"}= i[:QUERY]
        %td= i[:count]
        %td &nbsp;
